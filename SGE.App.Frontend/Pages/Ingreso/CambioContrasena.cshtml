@page
@model SGE.App.Frontend.Pages.CambioContrasenaModel
@{
}

<body>
    <div class="login-box col-4 offset-md-4">    
        <h1 class="text-center">Cambia tu contraseña</h1>
        <form method="post" action="">
            <div class="form-group">
                <label>Usuario</label>
                <input class="form-control" type="text" asp-for="Usuario">
                <span class = "text-danger">@Model.MensajeUsuario</span>
            </div>
            <div class="form-group">
                <label>Correo</label>
                <input class="form-control" type="text" asp-for="Mail">
                <span class = "text-danger">@Model.MensajeCorreo</span>
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input class="form-control" type="password" asp-for="NewPassword">
                <span class = "text-danger">@Model.MensajeExito</span>
            </div>
            <div class="form-group">
                <input class= "btn btn-primary btn-block" type="submit" value="Cambiar Contrsena">
            </div>
        </form>
    </div>
</body>