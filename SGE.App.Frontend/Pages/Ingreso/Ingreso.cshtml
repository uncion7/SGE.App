@page
@model SGE.App.Frontend.Pages.IngresoModel
@{
}

<body>
    <div class="login-box col-4 offset-md-4">    
        <h1 class="text-center">Ingresa</h1>
        <form method="post" action="">
            <div class="form-group">
                <label>Usuario</label>
                <input class="form-control" type="text" asp-for="Usuario">
                <span class = "text-danger">@Model.MensajeUsuario</span>
            </div>
            <div class="form-group">
                <label>Contraseña</label>
                <input class="form-control" type="password" asp-for="Password">
                <span class = "text-danger">@Model.MensajePassword</span>
            </div>
            <div class="form-group">
                <input class= "btn btn-primary btn-block" type="submit" value="Ingresar">
            </div>
            <div>
                <a asp-page="CambiarContrasena">Olvido su contraseña</a>
            </div>
        </form>
    </div>
</body>
