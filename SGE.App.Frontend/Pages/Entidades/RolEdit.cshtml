@page
@model SGE.App.Frontend.Pages.RolEditModel
@{
}
<div class="row">
    <div class="col-10">
        <h1>Rol:@Model.Rol.Nombre</h1>
    </div>
    <div class="col-2 text-right">
        <a class="btn btn-primary" data-toggle="tooltip" data-placement="top" title="Listar" asp-page="./RolList">
            <i class="fas fa-list-ul"></i>
        </a>
    </div>
</div>
<form method="post" action="">
    <input type="hidden" asp-for="Rol.Id">
    <div class="form-group">
        <label asp-for="Rol.Nombre"></label>
        <input asp-for="Rol.Nombre" class="form-control">
        <span asp-validation-for="Rol.Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Rol.Codigo"></label>
        <input asp-for="Rol.Codigo" class="form-control">
        <span asp-validation-for="Rol.Codigo" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary btn-block" data-toggle="tooltip" data-placement="top" title="Guardar">
        <i class="fas fa-2x fa-save"></i>        
    </button>
</form>
